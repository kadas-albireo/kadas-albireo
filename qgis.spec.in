%prep
%setup

%build
export CFLAGS="$RPM_OPT_FLAGS"
./configure --prefix=%{prefix}
make
strip src/qgis


%install
rm -rf $RPM_BUILD_ROOT
make install DESTDIR=$RPM_BUILD_ROOT

%clean
rm -rf $RPM_BUILD_ROOT

%files
%{prefix}/bin/%{name}
%{prefix}/lib/%{name}
%{prefix}/share/%{name}
%doc AUTHORS BUGS COPYING ChangeLog INSTALL NEWS README TODO

